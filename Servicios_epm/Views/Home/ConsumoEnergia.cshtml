@{
    ViewData["Title"] = "Consumo Energia";
}
<h1>@ViewData["Title"]</h1>
<style>

    button {
        width: 50%;
        padding: 10px;
        font-size: 18px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }
</style>

<div class="container" style="margin-top: 40px;border-radius: 8px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);padding: 40px;max-width: 400px; width: 100%;">
    <label id="promedioagua" style="margin-bottom: 10px">El promedio de consumo de energia es @ViewData["promedioenergia"] </label>
    <br />
    <label id="consumomayor" style="margin-bottom: 10px">Los clientes con mayor consumo fueron los de cedula @ViewData["consumomayor"]</label>
    <br />
    <label id="excesivoestrato" style="margin-bottom: 10px">El porcentaje de consumo excesivo por estrato fue @ViewData["excesivoestrato"]</label>
    <br />
    <label id="estratomasahorro" style="margin-bottom: 10px"> El estrato @ViewData["estratomasahorro"] fue el estrato que mas ahorro energia </label>
</div>

<form asp-action="energiaconsumo" method="post">
    <button type="submit" style="margin-top: 20px" ;>Energia</button>
</form>